{
  "compilerOptions": {
    "target": "ES6",                 // Output JavaScript version
    "module": "commonjs",            // CommonJS module system for Node.js
    "esModuleInterop": true,         // Enable ES module interoperability
    "skipLibCheck": true,            // Skip type checking for declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",              // Output compiled JS to the dist folder
    "rootDir": "./src",              // Root directory for your TypeScript source files
    "strict": true,                  // Enable strict type-checking options
    "moduleResolution": "node"       // Use Node.js style module resolution
  },
  "include": [
    "src/**/*.ts"                    // Include all TypeScript files inside the src folder
  ],
  "exclude": [
    "node_modules"                   // Exclude node_modules folder
  ]
}
